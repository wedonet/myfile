version: '3'

services:
   mysql:
      image: mysql:5.7.17
      ports:
         - 3307:3306
      restart: always
      volumes:
         - ./mysql/conf:/etc/mysql/conf.d
         - ./mysql/data:/var/lib/mysql
         - /etc/localtime:/etc/localtime
      environment:
         MYSQL_ROOT_PASSWORD: 123456
      networks:
         - my-net

networks:
   my-net:
     external:
       name: my-net